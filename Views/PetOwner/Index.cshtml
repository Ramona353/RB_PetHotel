@page
@model RB_PetHotel.Views.PetOwner.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New PetOwner-Relation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetOwnerModel[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwnerModel[0].Pet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PetOwnerModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.OwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pet.PetId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OwnerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OwnerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OwnerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
